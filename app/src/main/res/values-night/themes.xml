<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cream_100</item>
        <item name="colorPrimaryVariant">@color/blue_sky_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_sky_300</item>
        <item name="colorSecondaryVariant">@color/blue_sky_300</item>
        <item name="colorOnSecondary">@color/blue_sky_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue_sky_300</item>
        <item name="android:fontFamily">@font/marselis_pro_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/cream_100</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

</resources>