<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_sky_300</item>
        <item name="colorPrimaryVariant">@color/blue_sky_300</item>
        <item name="colorOnPrimary">@color/cream_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cream_100</item>
        <item name="colorSecondaryVariant">@color/blue_sky_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">@dimen/_100sdp</item>
    </style>

    <style name="ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue_sky_300</item>
        <item name="android:fontFamily">@font/marselis_pro_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="tiTitleStyle">
        <item name="fontFamily">@font/marselis_pro_regular</item>
    </style>

    <style name="FontProRegular">
        <item name="fontFamily">@font/marselis_pro_regular</item>
    </style>

    <style name="FontBold">
        <item name="fontFamily">@font/marselis_pro_bold</item>
    </style>

    <style name="CurrencyTextStyle" parent="@style/FontProRegular">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/marselis_pro_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="CurrencyTextStyleRed" parent="@style/FontProRegular">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/marselis_pro_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

</resources>